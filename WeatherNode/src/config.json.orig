{
    "interval": 3000,
    "sensors": [    
        {
            "type": "./mockSensor.js",
            "id": "Sensor 1",
            "settings": { }
        },
        {
            "type": "../../../Sensors/DHT22/dht22.js",
            "id": "Sensor 2",
            "settings": {
                "type": 22 // 11 for DHT11 sensor, 22 for DHT22 or AM2302 sensors
                "pin": 4
            }
        },
        {
            "type": "../../../Sensors/BMP085/bmp085.js",
            "id": "Sensor 3",
            "settings": { }
        }
    ],
    /* Adafruit IO connection details */
    "data": {
        "type": "./adafruitIo.js",
        "config": {
            "aioKey":"REPLACE WITH AIO KEY",
            "user":"REPLACE WITH USER NAME",
            "feeds":[
                {
                    "id":"test-temp",
                    "sensor": "Sensor 1",
                    "type": "t"
                },
                {
                    "id":"test-hum",
                    "sensor": "Sensor 1",
                    "type": "h"
                },
                {
                    "id":"FEED NAME",
                    "sensor": "SENSOR NAME",
                    "type": "ONE OF t,p OR h"
                }
            ]
        }
    }
    /* MQTT Connections details */
    "data": {
        "type": "./mqtt.js",
        "config": {
            "host":"MQTT SERVER URI",
            "clientId":"CLIENT ID",
            "username":"USERNAME - OPTIONAL", 
            "password":"PASSWORD - OPTIONAL",
            "topics":[
                {
                    "topic":"test/temp",
                    "sensor": "Sensor 1",
                    "type": "t"
                },
                {
                    "topic":"test/hum",
                    "sensor": "Sensor 1",
                    "type": "h"
                },
                {
                    "topic":"test/pres",
                    "sensor": "Sensor 1",
                    "type": "p"
                },
                {
                    "topic":"MQTT TOPIC",
                    "sensor": "SENSOR NAME",
                    "type": "ONE OF t,p OR h"
                }
            ]
        }
    }
}
